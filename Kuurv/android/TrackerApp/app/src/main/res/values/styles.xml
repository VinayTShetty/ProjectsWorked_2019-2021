<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:fontFamily">@font/century_gothic</item>
    </style>

    <style name="AppThemeSplash.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="ForgotPassswordActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#7c7a7a</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorAppTheme</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/century_gothic</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/century_gothic</item>
    </style>
    <style name="MyEditTextWhite" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="colorControlNormal">@color/colorGrey</item>
        <item name="colorControlActivated">@color/colorGrey</item>
        <item name="colorControlHighlight">@color/colorBlack</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>
    <style name="MyEditTextBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAppTheme</item>
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorAppTheme</item>
        <item name="colorControlHighlight">@color/colorAppTheme</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:fontFamily">serif</item>
    </style>


    <style name="MyEditTextAccountSettig" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorAppTheme</item>
        <item name="android:textColorHint">@color/colorAppTheme</item>
        <item name="colorControlNormal">@color/colorGrey</item>
        <item name="colorControlActivated">@color/colorAppTheme</item>
        <item name="colorControlHighlight">@color/colorBlack</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <!--Login ScreenDesign-->
    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">

        <item name="android:textSize">14sp</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlHighlight">#ffffff</item>
    </style>



    <style name="NavigationView">
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>


    <style name="SwitchCompattButton">
        <item name="colorControlActivated">@color/colorAppTheme</item>
    </style>

</resources>
