<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/raw_add_device_rl_main"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/_120sdp"
            android:padding="@dimen/_1sdp">

        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/device_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_default_logo"
                app:civ_border_color="@color/colorBlack"
                app:civ_border_width="1dp"
                app:civ_circle_background_color="@color/colorWhite" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/device_image"
                android:gravity="center_vertical"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/device_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:layout_toRightOf="@+id/device_image"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Device 1"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/marker_tv_device_last_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/device_name"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="0dp"
                    android:layout_toRightOf="@+id/device_image"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="4"
                    android:text="Device 1 sdfs dsf sdfds gsdgsdg  sssssdsf dsfg ghh dgh gh g gf fgh ghfg  gfh gh gh fgh g hfgh gfhfg  gh  gf fghdhfg fg "
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10sdp" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>