<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <!--<android.support.v4.widget.SwipeRefreshLayout-->
    <!--android:id="@+id/fragment_setting_bridge_conn_swipeRefreshLayout"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_below="@+id/fragment_setting_bridge_conn_relativelayout">-->

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/frg_notification_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_5sdp"
            android:visibility="visible"/>
    <!--</android.support.v4.widget.SwipeRefreshLayout>-->

    <RelativeLayout
            android:id="@+id/frg_notification_rl_no_notification"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center">

        <ProgressBar
                android:id="@+id/frg_notification_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="true"/>

        <TextView
                android:id="@+id/frg_notification_tv_no_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frg_notification_progress"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:padding="@dimen/_10sdp"
                android:text="No Notification found."
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15sdp"
                android:visibility="visible"/>
    </RelativeLayout>

</RelativeLayout>
