<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nav_header_main_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_145sdp"
        android:layout_alignParentTop="true"
        android:background="@color/colorAppTheme"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
            android:id="@+id/nav_header_main_rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_7sdp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/nav_header_main_imageView_logo"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:paddingEnd="@dimen/_1sdp"
                android:text="TM"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        <ImageView
                android:id="@+id/nav_header_main_imageView_logo"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/logoicon" />

        <TextView
                android:id="@+id/nav_header_main_imageView_logo1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_75sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_14sdp"
                android:gravity="left"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingTop="@dimen/_5sdp"
                android:text="kuurv"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_45sdp"
                android:visibility="visible" />

        <TextView
                android:id="@+id/nav_header_main_tv_titlehello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nav_header_main_imageView_logo"
                android:layout_marginLeft="@dimen/_2sdp"
                android:text="@string/app_title"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/nav_header_main_tv_titleTest4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nav_header_main_imageView_logo"
                android:layout_marginLeft="@dimen/_39sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textNoSuggestions"
                android:text="\t\tTest"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/nav_header_main_tv_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nav_header_main_tv_titlehello"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/app_web"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/_14sdp"
                android:textStyle="italic" />

    </RelativeLayout>
</RelativeLayout>