<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">
    <RelativeLayout
            android:id="@+id/raw_notification_rl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_black">


        <TextView
                android:id="@+id/raw_notification_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:text="Lorem ipsum, or lipsum as it is sometimes known, is dummy text used in laying out print, graphic or web designs."
                android:layout_centerVertical="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14sdp"/>
        <TextView
                android:id="@+id/raw_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:text="Timings"
                android:layout_centerVertical="true"
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/raw_notification_tv_name"
                android:textSize="@dimen/_14sdp"/>


    </RelativeLayout>
</RelativeLayout>
