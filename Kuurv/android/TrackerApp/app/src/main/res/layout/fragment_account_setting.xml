<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/frg_about_us_rl_change_password"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorWhite"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/frg_about_us_tv_lbl_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/frg_about_us_iv_change_password_right_arrow"
                android:layout_alignParentLeft="true"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:text="Change Password"
                android:layout_centerVertical="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14sdp"/>
        <ImageView
                android:id="@+id/frg_about_us_iv_change_password_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                app:srcCompat="@drawable/ic_right_arrow"
                android:tint="@color/colorInActiveMenu"
                android:visibility="visible"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/frg_about_us_rl_shared_info"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/colorWhite"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/frg_about_us_tv_lbl_shared_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/frg_about_us_iv_shared_info_right_arrow"
                android:layout_alignParentLeft="true"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:text="Account Info"
                android:layout_centerVertical="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14sdp"/>
        <ImageView
                android:id="@+id/frg_about_us_iv_shared_info_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                app:srcCompat="@drawable/ic_right_arrow"
                android:tint="@color/colorInActiveMenu"
                android:visibility="visible"/>
    </RelativeLayout>

</LinearLayout>
