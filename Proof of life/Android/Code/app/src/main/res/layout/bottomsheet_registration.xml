<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomsheet_registration"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <TextView
        android:id="@+id/textView_sucess_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Sucess"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp">
    </TextView>

    <ImageView
        android:id="@+id/imageView_sucessRegistation_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fingerprint_registration_sucess"
        android:layout_alignParentRight="true"
          android:layout_alignTop="@+id/textView_sucess_id"
        android:layout_marginRight="30dp">
    </ImageView>
    <ProgressBar
        android:id="@+id/progressbar_sucessProgress_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="50"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_below="@id/imageView_sucessRegistation_id"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:progressDrawable="@drawable/bottomsheet_sucess_registation_prog_bar">
    </ProgressBar>
    <TextView
        android:id="@+id/texView_sucessCount_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressbar_sucessProgress_id"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:text="50/100"
        android:textSize="15dp"
        android:textColor="#aaaaaa"
        android:layout_marginLeft="30dp">
    </TextView>
    <TextView
        android:id="@+id/textView_instrction_details_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instruction_details"
        android:layout_below="@id/texView_sucessCount_id"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    </TextView>
    <TextView
        android:id="@+id/texview_timer_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textView_instrction_details_id"
        android:layout_marginRight="50dp"
        android:text="00:05">
    </TextView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_processnext_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/textView_instrction_details_id"
        android:layout_marginTop="30dp"
        android:background="@color/blue"
        android:text="OK"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp">
    </androidx.appcompat.widget.AppCompatButton>
</RelativeLayout>